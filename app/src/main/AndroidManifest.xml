<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.a100ohm.poems">

    <!--读写外部存储卡-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!--Bmob-->
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".application.MyAppliction"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Normal">
        <!--个人空间-->
        <activity android:name=".view.activity.PersonalCenterActivity"
            android:theme="@style/AppTheme.Normal.Main"/>
        <!-- 注册页 -->
        <activity
            android:name=".view.activity.SignUpActivity"
            android:windowSoftInputMode="adjustPan" />
        <!-- 主页 -->
        <activity
            android:name=".view.activity.MainActivity"
            android:theme="@style/AppTheme.Normal.Main"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <!-- 登录页 -->
        <activity
            android:name=".view.activity.LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <!-- 向导页 -->
        <activity
            android:name=".view.activity.GuideActivity"
            android:theme="@style/AppTheme.Splash" />
        <!-- 启动闪屏页 -->
        <activity
            android:name=".view.activity.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>