<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.a100ohm.poems">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.MyAppliction"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Normal">
        <!--个人空间-->
        <activity android:name=".view.activity.PersonalCenterActivity"
            android:theme="@style/AppTheme.Normal.Main"/>
        <!-- 注册页 -->
        <activity
            android:name=".view.activity.SignUpActivity"
            android:windowSoftInputMode="adjustResize" />
        <!-- 主页 -->
        <activity
            android:name=".view.activity.MainActivity"
            android:theme="@style/AppTheme.Normal.Main" />
        <!-- 登录页 -->
        <activity
            android:name=".view.activity.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <!-- 向导页 -->
        <activity
            android:name=".view.activity.GuideActivity"
            android:theme="@style/AppTheme.Splash" />
        <!-- 启动闪屏页 -->
        <activity
            android:name=".view.activity.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>